<?xml version="1.0" encoding="ISO-8859-1"?>

<adf version="1.2">

<bus name="B1">
    <width>32</width>
    <segment name="seg1">
        <writes-to>seg2</writes-to>
    </segment>
    <segment name="seg2">
        <writes-to>seg3</writes-to>
    </segment>
    <segment name="seg3">
        <writes-to></writes-to>
    </segment>
    <short-immediate>
        <extension>sign</extension>
        <width>8</width>
    </short-immediate>
</bus>

<socket name="S1">
    <reads-from>
        <bus>B1</bus>
        <segment>seg1</segment>
    </reads-from>
</socket>

<socket name="S2">
    <writes-to>
        <bus>B1</bus>
        <segment>seg2</segment>
    </writes-to>
</socket>

<function-unit name="fu1">
    <port name="port1">
        <connects-to>S1</connects-to>
        <connects-to>S2</connects-to>
        <width>32</width>
        <triggers/>
        <sets-opcode/>
    </port>
    <port name="port2">
        <connects-to>S2</connects-to>
        <width>32</width>
        <triggers/>
    </port>
    <operation>
        <name>op1</name>
        <bind name="1">port1</bind>
        <pipeline>
            <resource name="res1">
                <start-cycle>2</start-cycle>
                <cycles>3</cycles>
            </resource>
        </pipeline>
    </operation>
    <operation>
        <name>op2</name>
        <bind name="1">port1</bind>
        <pipeline/>
    </operation>
    <address-space/>
</function-unit>

</adf>